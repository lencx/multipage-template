{
  "name": "multipage-template",
  "version": "2.1.0",
  "description": "Multi-module(webpack@4, pug, scss, postcss, babel)",
  "repository": "git@github.com:lencx/multipage-template.git",
  "author": "Len <cxin1314@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clear": "shx rm -r ./dist ./dist_*.zip && shx echo Clear dist file done!",
    "dev": "cross-env NODE_ENV=develpoment webpack-dev-server --config ./webpack/webpack.dev.babel.js",
    "build": "cross-env NODE_ENV=production webpack-cli -d --config ./webpack/webpack.prod.babel.js && yarn mv:static && yarn zip",
    "mv:static": "shx cp -R ./static ./dist",
    "cli-h": "webpack-cli --help",
    "dev-h": "webpack-dev-server --help",
    "zip": ".bin/zip"
  },
  "devDependencies": {
    "archiver": "^2.1.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-runtime": "^6.26.0",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "eslint": "^5.0.1",
    "eslint-loader": "^2.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "lost": "^8.3.0",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "postcss": "^6.0.23",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^2.1.5",
    "pug": "^2.0.3",
    "pug-html-loader": "^1.1.5",
    "sass-loader": "^7.0.3",
    "shx": "^0.3.1",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "webpack-manifest-plugin": "^2.0.3",
    "webpack-merge": "^4.1.3"
  }
}
